<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorUIPrimary</item>
        <item name="colorPrimaryDark">@color/colorUIPrimaryDark</item>
        <item name="colorAccent">@color/colorUIAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ConstraintLayout">
        <item name="android:background">@drawable/background_none</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/groupNonePrimary</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextView.CardName" parent="TextView">
        <item name="android:fontFamily">@font/uncial_antiqua</item>
    </style>

    <style name="TextView.CardText" parent="TextView">
        <item name="android:textSize">6pt</item>
        <item name="android:fontFamily">@font/amethysta</item>
    </style>

    <style name="TextView.CardFlavorText" parent="TextView">
        <item name="android:textSize">5pt</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/libre_baskerville</item>
    </style>

    <!-- Stillblood text -->
    <style name="TextView.CardName.Stillblood" parent="TextView.CardName">
    </style>

    <style name="TextView.CardText.Stillblood" parent="TextView.CardText">
    </style>

    <style name="TextView.CardFlavorText.Stillblood" parent="TextView.CardFlavorText">
    </style>

    <!-- Cursed text -->
    <style name="TextView.CardName.Cursed" parent="TextView.CardName">
        <item name="android:textColor">@color/groupCursedPrimary</item>
    </style>

    <style name="TextView.CardText.Cursed" parent="TextView.CardText">
        <item name="android:textColor">@color/groupCursedPrimary</item>
    </style>

    <style name="TextView.CardFlavorText.Cursed" parent="TextView.CardFlavorText">
        <item name="android:textColor">@color/groupCursedPrimary</item>
    </style>

    <!-- Piercers text -->
    <style name="TextView.CardName.Piercers" parent="TextView.CardName">
        <item name="android:textColor">@color/groupPiercersSecondary</item>
    </style>

    <style name="TextView.CardText.Piercers" parent="TextView.CardText">
    </style>

    <style name="TextView.CardFlavorText.Piercers" parent="TextView.CardFlavorText">
    </style>

    <!-- Fae text -->
    <style name="TextView.CardName.Fae" parent="TextView.CardName">
    </style>

    <style name="TextView.CardText.Fae" parent="TextView.CardText">
    </style>

    <style name="TextView.CardFlavorText.Fae" parent="TextView.CardFlavorText">
