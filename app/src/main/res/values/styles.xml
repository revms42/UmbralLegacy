    <!-- Old Ones text -->
    <style name="TextView.CardName.OldOnes" parent="TextView.CardName">
    </style>

    <style name="TextView.CardText.OldOnes" parent="TextView.CardText">
    </style>

    <style name="TextView.CardFlavorText.OldOnes" parent="TextView.CardFlavorText">
    </style>

    <!-- Old Ones text -->
    <style name="TextView.CardName.Hellbound" parent="TextView.CardName">
        <item name="android:textColor">@color/groupHellboundPrimary</item>
    </style>

    <style name="TextView.CardText.Hellbound" parent="TextView.CardText">
        <item name="android:textColor">@color/groupHellboundPrimary</item>
